{
  "name": "airport-safety-manager",
  "private": true,
  "version": "1.0.0",
  "main": "electron-main.js",
  "description": "Airport Safety Inspection Manager",
  "author": "Safety Team",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "typescript": "^5.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.18"
  },
  "build": {
    "appId": "com.airport.safety",
    "productName": "공항안전점검관리",
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "directories": {
      "output": "release"
    }
  }
}